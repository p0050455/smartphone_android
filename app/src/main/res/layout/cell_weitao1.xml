<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_of_10"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true"
    android:layout_margin="@dimen/dp_of_5">

<!--    <com.facebook.shimmer.ShimmerFrameLayout-->
<!--        android:id="@+id/shimmer_view_container"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        >-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.pactera.widget.CircleImageView
                android:id="@+id/cell_weitao1_image_view"
                android:layout_margin="@dimen/dp_of_5"
                android:layout_width="@dimen/dp_of_80"
                android:layout_height="@dimen/dp_of_80"
                android:src="@drawable/bg_graydialog"
                android:background="@drawable/bg_graydialog"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/cell_weitao1_text_view1"
                android:layout_margin="@dimen/dp_of_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

<!--    </com.facebook.shimmer.ShimmerFrameLayout>-->

</androidx.cardview.widget.CardView>
