<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_of_60"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_tint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/ys_linearlayout_horizontal_left_textview"
            style="@style/textview_left"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            tools:text="设置条件的名称："/>

        <EditText
            android:id="@+id/ys_linearlayout_horizontal_right_edittext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@android:color/background_dark"
            tools:text="哈哈哈"
            android:background="@drawable/checkbox_unselected"/>

    </LinearLayout>

</LinearLayout>