<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_of_10"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true"
    android:layout_margin="@dimen/dp_of_5"
    android:padding="@dimen/dp_of_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_of_5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.pactera.widget.CircleImageView
                    android:id="@+id/cell_weitao2_image_view_1"
                    android:layout_width="@dimen/dp_of_60"
                    android:layout_height="@dimen/dp_of_60"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp_of_5"
                    android:paddingEnd="@dimen/dp_of_5">

                    <TextView
                        android:id="@+id/cell_weitao2_text_view1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textFontWeight="100"/>

                    <TextView
                        android:id="@+id/cell_weitao2_text_view2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ぐるぐるカーテン"
                        android:textColor="@android:color/darker_gray"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="パスポート"
                    android:background="@drawable/biaoqian_blue"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="アンアン"
                android:textColor="@android:color/darker_gray"/>

            <ImageView
                android:id="@+id/cell_weitao2_image_view"
                android:layout_margin="@dimen/dp_of_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_of_200"
                android:src="@drawable/bg_graydialog"
                android:scaleType="centerCrop"
                android:background="@color/colorSecondry"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.pactera.widget.CircleImageView
                    android:id="@+id/cell_weitao2_image_view_2"
                    android:layout_width="@dimen/dp_of_80"
                    android:layout_height="@dimen/dp_of_80"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp_of_10"
                    android:paddingEnd="@dimen/dp_of_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="アンアン"
                        android:textColor="@android:color/black"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_margin="@dimen/dp_of_5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="期间限定购入"
                            />

                        <TextView
                            android:layout_margin="@dimen/dp_of_5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="￥24999"
                            android:textFontWeight="30"
                            android:textColor="@android:color/holo_purple"
                            />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

</androidx.cardview.widget.CardView>
