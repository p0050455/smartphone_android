<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_window_pigeon_relativelayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_of_10"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="@dimen/dp_of_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/pop_window_my_device_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请填写设备名称"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="@dimen/dp_of_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/pop_window_my_device_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请填写设备型号"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pop_window_pigeon_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_50"
        android:layout_alignParentBottom="true"
        android:background="@color/colorSecondry">

        <Button
            android:id="@+id/pop_window_pigeon_button_makesure"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="添  加"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white" />

        <View
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="1dp"
            android:background="@android:color/white"/>

        <Button
            android:id="@+id/pop_window_pigeon_button_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="取  消"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>
