<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="49dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ys_linear_layout_horizontal_text_view_left"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:minHeight="49dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginStart="@dimen/dp_of_10"
            tools:text="昵称" />

        <TextView
            android:id="@+id/ys_linear_layout_horizontal_text_view_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="49dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="大神" />

    </LinearLayout>

    <include layout="@layout/recyclerview_divider_line"/>

</LinearLayout>
