<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_tint" />

    <LinearLayout
        android:id="@+id/llIdentify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingStart="@dimen/dp_of_10"
        android:paddingEnd="@dimen/dp_of_10"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/shanping" />-->

        <TextView
            style="@style/text_view"
            android:id="@+id/ys_linearlayout_horizontal_single_textview_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_of_10"
            android:paddingEnd="@dimen/dp_of_10"
            android:text="我的赛鸽"
            android:textSize="@dimen/sp_of_16" />

        <TextView
            android:id="@+id/tvIdentify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_50"
            android:drawableEnd="@mipmap/arrow_right"
            android:drawablePadding="@dimen/dp_of_10"
            android:gravity="center_vertical|end"
            android:paddingStart="@dimen/dp_of_10"
            android:paddingEnd="@dimen/dp_of_10"
            android:textSize="@dimen/sp_of_14" />

    </LinearLayout>

</LinearLayout>
