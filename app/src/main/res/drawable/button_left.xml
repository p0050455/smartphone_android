<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 选中状态 -->
    <item android:state_checked="true" >
        <layer-list >
            <item >
                <shape android:shape="rectangle">
                    <stroke android:width="5dp" android:color="#4FD2DD"/>
                </shape>
            </item>
            <item android:bottom="5dp">
                <shape android:shape="rectangle" >
                    <solid android:color="#fff"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- 默认状态 -->
    <item >
        <layer-list >
            <item>
                <shape android:shape="rectangle">
                    <!-- 填充的颜色 -->
                    <solid android:color="#FBF6D8" />
                    <!-- 设置按钮的四个角为弧形 -->
                    <!-- android:radius 弧形的半径 -->
                    <corners android:topLeftRadius="7dip" />
                    <corners android:bottomLeftRadius="7dip" />

                    <!-- padding：Button里面的文字与Button边界的间隔 -->
                    <padding
                        android:left="4dp"
                        android:top="4dp"
                        android:right="4dp"
                        android:bottom="4dp"
                        />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <!-- 填充的颜色 -->
                    <solid android:color="#FBF6D8" />
                    <!-- 设置按钮的四个角为弧形 -->
                    <!-- android:radius 弧形的半径 -->
                    <corners android:topLeftRadius="7dip" />
                    <corners android:bottomLeftRadius="7dip" />

                    <!-- padding：Button里面的文字与Button边界的间隔 -->
                    <padding
                        android:left="4dp"
                        android:top="4dp"
                        android:right="4dp"
                        android:bottom="4dp"
                        />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>